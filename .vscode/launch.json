    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch IdSrv",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/ApogeeDev.IdentityServer/bin/Debug/netcoreapp2.2/ApogeeDev.IdentityServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/ApogeeDev.IdentityServer",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": true,
                "args": "https://local-idsrv.apogee-dev.com:5001",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start https://local-idsrv.apogee-dev.com:5001"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://local-idsrv.apogee-dev.com:5001"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/ApogeeDev.IdentityServer/Views"
            }
        },
        {
            "name": "Launch API Sample",
            "type": "coreclr",
